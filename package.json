{
  "name": "firestore-model",
  "version": "0.0.21",
  "description": "Firestore / Firebase object model schema wrapper",
  "keywords": [
    "Firestore",
    "Firebase",
    "object",
    "model",
    "schema"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joonhocho/firestore-model.git"
  },
  "bugs": {
    "url": "https://github.com/joonhocho/firestore-model/issues"
  },
  "homepage": "https://github.com/joonhocho/firestore-model#readme",
  "author": "Joon Ho Cho",
  "license": "MIT",
  "main": "es6/index.js",
  "module": "es6/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc -p ./tsconfig.json && tscpaths -p ./tsconfig.json -s ./src -o ./lib",
    "build:es6": "tsc -p ./tsconfig.es6.json && tscpaths -p ./tsconfig.es6.json -s ./src -o ./es6",
    "clean": "rm -rf ./lib ./es6 ./coverage",
    "format": "prettier --write \"./*.{js,jsx,ts,tsx}\" \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "tslint -c ./tslint.json \"src/**/*\"",
    "lint:fix": "tslint --fix -c ./tslint.json \"src/**/*\"",
    "prepublish": "yarn start",
    "reinstall": "rm -rf ./node_modules ./yarn.lock && yarn",
    "start": "yarn clean && yarn format && yarn lint:fix && yarn test && yarn build && yarn build:es6",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "up:deps": "yarn upgrade-interactive --latest --ignore-engines"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "firebase-admin": "7.3.0",
    "jest": "^24.8.0",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "tscpaths": "^0.0.9",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.10.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  },
  "peerDependencies": {
    "firebase-admin": "7.1.0"
  },
  "engines": {
    "node": ">=8.2.1"
  },
  "engineStrict": true
}
