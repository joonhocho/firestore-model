{
  "name": "firestore-model",
  "version": "0.0.23",
  "description": "Firestore / Firebase object model schema wrapper",
  "keywords": [
    "Firestore",
    "Firebase",
    "object",
    "model",
    "schema"
  ],
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "all": "npm run clean && npm run format && npm run lint:fix && npm run test && npm run build && npm run build:es5",
    "build": "tsc -p ./tsconfig.json && tscpaths -p ./tsconfig.json -s ./src -o ./lib",
    "build:es5": "tsc -p ./tsconfig.es5.json && tscpaths -p ./tsconfig.es5.json -s ./src -o ./es5",
    "clean": "rm -rf ./lib ./es5 ./coverage",
    "format": "prettier --write \"./*.{js,jsx,ts,tsx}\" \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "tslint -c ./tslint.json \"src/**/*\"",
    "lint:fix": "tslint --fix -c ./tslint.json \"src/**/*\"",
    "precommit": "npm run all",
    "prepublish": "npm run all",
    "reinstall": "rm -rf ./node_modules ./package-lock.json ./yarn.lock && npm i",
    "start": "npm run test",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "test:watch": "jest --watch"
  },
  "pre-commit": "precommit",
  "author": "Joon Ho Cho",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joonhocho/firestore-model.git"
  },
  "bugs": {
    "url": "https://github.com/joonhocho/firestore-model/issues"
  },
  "homepage": "https://github.com/joonhocho/firestore-model#readme",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.7",
    "coveralls": "^3.0.4",
    "firebase-admin": "8.0.0",
    "jest": "^24.8.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tscpaths": "^0.0.9",
    "tslint": "^5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.1"
  },
  "peerDependencies": {
    "firebase-admin": ">=7.0.0"
  },
  "engines": {
    "node": ">=8.2.1"
  },
  "engineStrict": true,
  "dependencies": {
    "tsdef": "0.0.8"
  }
}
